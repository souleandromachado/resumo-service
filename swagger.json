{
  "openapi": "3.0.0",
  "info": {
    "title": "Resumo API",
    "version": "1.0.0",
    "description": "API para geração de resumos e perguntas com avaliação"
  },
  "paths": {
    "/resumo": {
      "post": {
        "summary": "Gerar resumo e perguntas",
        "responses": {
          "200": {
            "description": "Resumo e perguntas gerados com sucesso"
          }
        }
      }
    },
    "/resumos": {
      "get": {
        "summary": "Listar todos os resumos",
        "responses": {
          "200": {
            "description": "Lista de resumos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Resumo"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/resumos/{id}": {
      "put": {
        "summary": "Editar resumo",
        "responses": {
          "200": {
            "description": "Resumo editado com sucesso"
          }
        }
      },
      "delete": {
        "summary": "Deletar resumo",
        "responses": {
          "200": {
            "description": "Resumo deletado com sucesso"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Resumo": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "tema": {
            "type": "string"
          },
          "resumo": {
            "type": "string"
          },
          "perguntas": {
            "type": "array",
            "items": {
              "type": "object"
            }
          },
          "criadoEm": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
